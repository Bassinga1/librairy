{% extends 'base-be.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Show</h1>
        <a href="{{ path('app_admin_livre_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ livre.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ livre.price }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ livre.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ livre.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_livre/_delete_form.html.twig') }}
    
{% endblock %}
