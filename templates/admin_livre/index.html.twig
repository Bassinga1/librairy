{% extends 'base-be.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Books</h1>
        <a href="{{ path('app_admin_livre_new') }}" class="btn btn-success">New</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                {# <th>Description</th> #}
                <th>Price</th>
                <th>Active</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.title }}</td>
                {# <td>{{ livre.description }}</td> #}
                <td>{{ livre.price }}</td>
                <td>{{ livre.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ livre.slug }}</td>
                <td>
                    {{ include('admin_livre/_delete_form.html.twig') }}
                    <a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}" class="btn btn-dark mb-1"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><div class="text-start">No data found in the BDD.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
