{% extends 'base-be.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Contact</h1>
        <a href="{{ path('app_admin_contact_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.sujet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_contact/_delete_form.html.twig') }}

{% endblock %}
