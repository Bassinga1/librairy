{% extends 'base-be.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Contact</h1>
        <a href="{{ path('app_admin_contact_new') }}" class="btn btn-success">New</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.sujet }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    {{ include('admin_contact/_delete_form.html.twig') }}
                    <a href="{{ path('app_admin_contact_show', {'id': contact.id}) }}" class="btn btn-dark mb-1"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_contact_edit', {'id': contact.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"><div class="text-start">No data found in the BDD.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
