{% extends 'base-be.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Carousel</h1>
        <a href="{{ path('app_admin_categorie_new') }}" class="btn btn-success">New</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                {# <th>Description</th> #}
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>IsActive</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                {# <td>{{ categorie.description }}</td> #}
                <td>{{ categorie.imageName }}</td>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ categorie.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ categorie.slug }}</td>
                <td class="text-end">
                    {{ include('admin_categorie/_delete_form.html.twig') }}
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}" class="btn btn-dark mb-1"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7"><div class="text-start">No data found in the BDD.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
