{% extends 'base-be.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Show</h1>
        <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ categorie.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ categorie.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ categorie.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_categorie/_delete_form.html.twig') }}
{% endblock %}
