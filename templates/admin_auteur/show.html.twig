{% extends 'base-be.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Auteur</h1>
        <a href="{{ path('app_admin_auteur_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ auteur.pseudo }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ auteur.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ auteur.lastname }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ auteur.biography }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ auteur.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ auteur.updatedAt ? auteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ auteur.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_auteur/_delete_form.html.twig') }}

{% endblock %}
