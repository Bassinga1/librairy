{% extends 'base.html.twig' %}

{% block title %}Our Categories{% endblock %}

{% block body %}

<h1 class="mb-4">Nos cat√©gories</h1>
<div class="row justify-content-center">
{% for categorie in categories %}
    <div class="col-12 col-md-3 d-flex align-items-stretch">
        <div class="card">
            {% set image = "default.jpg" %}
            {% if categorie.imageName is not null %}
            {% set image = categorie.imageName %}
            {% endif %}
            <img src="{{ asset('images/categorie/' ~ image) }}" class="card-img-top" alt="{{ categorie.name }}">
            <div class="card-body d-flex justify-content-center">
                <div class="align-self-end text-center">
                    <h5 class="card-title">{{ categorie.name }}</h5>
                    <a href="{{ path('app_front_categorie', {'slug': categorie.slug }) }}" class="btn btn-dark">See</a>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    No categorie yet
{% endfor %}
</div>

{% endblock %}
