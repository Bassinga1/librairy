{# On crée des variables pour rendre dynamique l'attribution de la classe active sur les liens du menu de la _left-nav #}
{% set auteurActive = "" %}
{% set carouselActive = "" %}
{% set categorieActive = "" %}
{% set dashboardActive = "" %}
{% set homeActive = "" %}
{% set imageActive = "" %}
{% set livreActive = "" %}
{% set userActive = "" %}

{# On verifie si un mot est contenu dans la route (barre d'adresse) et si c'est le cas on modifie la valeur de la variable concerné #}
{% if "auteur" in app.request.pathinfo %}
{% set auteurActive = "active" %}

{% elseif "dashboard" in app.request.pathinfo %}
{% set dashboardActive = "active" %}

{% elseif "home" in app.request.pathinfo %}
{% set homeActive = "active" %}

{% elseif "carousel" in app.request.pathinfo %}
{% set carouselActive = "active" %}

{% elseif "categorie" in app.request.pathinfo %}
{% set categorieActive = "active" %}

{% elseif "livre" in app.request.pathinfo %}
{% set livreActive = "active" %}

{% elseif "image" in app.request.pathinfo %}
{% set imageActive = "active" %}

{% elseif "user" in app.request.pathinfo %}
{% set userActive = "active" %}

{% elseif "auteur" in app.request.pathinfo %}
{% set auteurActive = "active" %}
{% endif %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# on charge le app.css et la font d'adminkit  #}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {# On charge le cdn de bootstrap 5.2 #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
        {# on charge le style de lightbox  #}
        <link rel="stylesheet" href="{{ asset('css/lightbox.min.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

        {# on charge le style-back.min.css  #}
        <link rel="stylesheet" href="{{ asset('css/style-back.min.css') }}">
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {# On inclut le panneau latéral gauche #}
            {% include 'admin_common/_left-nav.html.twig' %}
            <div class="main">
                {# On inclut la top-nav #}
                {% include 'admin_common/_top-nav.html.twig' %}
                <main class="content">
                    <div class="container-fluid p-0">
                        {# On met une alert Boostrap si necessaire #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {% block body %}{% endblock %}
                    </div>
                </main>
                {# On inclut le footer #}
                {% include 'admin_common/_footer.html.twig' %}
            </div>
        </div>

        
        {# on charge le cdn de jquery #}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        {# on charge le js d'adminkit #}
        <script src="{{ asset('js/app.js') }}"></script>
        {# on charge le js de lightbox #}
        <script src="{{ asset('js/lightbox.min.js') }}"></script>
        {# on charge le CDN select2 de https://select2.org/getting-started/installation #}
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        {# on charge le js de bootstrap #}
        {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> #}
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
