{% extends 'base-be.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Home</h1>
        <a href="{{ path('app_admin_home_new') }}" class="btn btn-success">New</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                {# <th>Text</th> #}
                <th>Signature</th>
                <th>IsActive</th>
                <th>ImageName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.title }}</td>
                {# <td>{{ home.text }}</td> #}
                <td>{{ home.signature }}</td>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ home.imageName }}</td>
                <td>
                    {% include 'admin_home/_delete_form.html.twig' %}
                    <a href="{{ path('app_admin_home_show', {'id': home.id}) }}" class="btn btn-dark mb-1"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><div class="text-start">No data found in the BDD.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
