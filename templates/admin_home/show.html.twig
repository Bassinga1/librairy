{% extends 'base-be.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Show</h1>
        <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ home.text }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ home.signature }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ home.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_home/_delete_form.html.twig') }}
    
{% endblock %}
