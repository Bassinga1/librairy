<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		{# On charge le cdn de bootstrap 5.2 #}
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
		{# on charge le style de lightbox  #}
		<link
		rel="stylesheet" href="{{ asset('css/lightbox.min.css') }}">
		{# on charge le style-back.min.css  #}
		<link rel="stylesheet" href="{{ asset('css/style-front.min.css') }}"> {% block stylesheets %}{% endblock %}
		</head>

		<body>

			{% include 'front_common/_top-nav.html.twig' %}
			<main
				class="container-xl py-4 bg-white">
				{# On met une alert Boostrap si necessaire #}
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }} alert-dismissible fade show">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}
				{% endfor %}
				{% block body %}{% endblock %}
			</main>
			{% include 'front_common/_footer.html.twig' %}

			{# on charge le cdn de jquery #}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
			{# on charge le js de bootstrap #}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
			{# on charge le js de lightbox #}
			<script src="{{ asset('js/lightbox.min.js') }}"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
