{% extends 'base-be.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Show</h1>
        <a href="{{ path('app_admin_image_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>RankNumber</th>
                <td>{{ image.rankNumber }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ image.updatedAt ? image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_image/_delete_form.html.twig') }}
{% endblock %}
